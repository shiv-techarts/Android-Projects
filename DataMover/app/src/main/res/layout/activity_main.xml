<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="#CCCCCC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.shiv.datamover.MainActivity">

    <RelativeLayout
        android:id="@+id/mailArea"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mailIdArea"
            android:orientation="horizontal"
            android:weightSum="12"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/mailIdText"
                android:layout_weight="8"
                android:hint="Enter Your Mail ID"
                android:textColorHint="#000011"
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="match_parent" />

            <Space
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordArea"
            android:orientation="horizontal"
            android:layout_below="@+id/mailIdArea"
            android:weightSum="12"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/mailPassText"
                android:layout_weight="8"
                android:hint="Enter Your Password"
                android:textColorHint="#000011"
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="match_parent" />

            <Space
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/signInButtonArea"
            android:orientation="horizontal"
            android:layout_below="@+id/passwordArea"
            android:weightSum="12"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/signInButton"
                android:layout_weight="8"
                android:text="SIGN IN"
                android:background="?attr/colorPrimary"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="match_parent" />

            <Space
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
